{
  "name": "Shiny",
  "version": "7.8.1",
  "author": "Eridanus Sora",
  "manifest_version": 2,
  "description": "Shiny监视",
  "icons": {
    "48": "assets/image/Shiny.png"
  },
  "browser_action": {
    "default_popup": "./recent/index.html",
    "default_title": "打开设置"
  },
  "background": {
    "page": "./background/index.html",
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "background",
    "http://*/*",
    "https://*/*"
  ]
}